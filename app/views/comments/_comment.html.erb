<% reply = Comment.new(post_id: comment.post.id, comment_id: comment.id) %>

<div class="block">
    <p class="mb-2"><span class="has-text-weight-bold"><%= comment.user.username %></span> * <span class="has-text-weight-light"><%= distance_of_time_in_words(comment.created_at, DateTime.now) %> ago</span></p>
    <%= comment.content.html_safe %>
    <div class="block p-3">
        <%#= render partial: "comments/form", locals: { comment: reply } %>
    </div>
    <%= turbo_frame_tag Comment.new do %>
        <%= link_to 'Reply', new_post_comment_path(comment_id: comment.id) %>
    <% end %>
    <div class="block p-3">
        <% comment.replies.each do |r| %>
            <%= comment.replies.html_safe %>
        <% end %>
    </div>
</div>