<div class="box">
    <div class="columns">
        <div class="column is-narrow is-flex is-align-items-center">
            <a href="<%= edit_admin_brand_path(brand) %>" data-turbo="false">
                <figure class="image is-48x48 is-flex is-align-items-center mr-4">
                    <%= image_tag brand.logo.variant(:thumb), alt: "#{brand.name} logo", title: "#{brand.name} logo", style: "height: 100%;object-fit: contain;" %>
                </figure>
            </a>
            <%= link_to brand.name, edit_admin_brand_path(brand), class: "is-size-4" %>
        </div>
        <div class="column">
            <div class="buttons is-right">
                <%= link_to 'Edit', edit_admin_brand_path(brand), class: "button is-link" %>
                <%# TODO: add confirmation before delete %>
                <%= button_to 'Delete', [:admin, brand], method: :delete, class: "button is-danger" %>
            </div>
        </div>
    </div>
</div>