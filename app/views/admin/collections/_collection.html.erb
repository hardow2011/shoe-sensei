<%= turbo_frame_tag collection, class: 'box' do %>
    <div class="columns">
        <div class="column is-narrow is-flex is-align-items-center">
            <p>
                 <%= link_to collection.name, edit_admin_collection_path(collection), data: { turbo: (defined?(brand) and brand != nil) ? true : false }, class: "is-size-4" %>
                 <% unless defined?(brand) and brand != nil %>
                 from 
                 <%= link_to collection.brand.name, edit_admin_brand_path(collection.brand), data: { turbo: (defined?(brand) and brand != nil) ? true : false }, class: "is-size-5" %>
                 <% end %>
            </p>
        </div>
        <div class="column">
            <div class="buttons is-right">
                <%= link_to 'Edit', edit_admin_collection_path(collection), class: "button is-link" %>
                <%= button_to('Delete', [:admin, collection], method: :delete, class: "button is-danger", params: { deleted_from_index: (defined?(brand) and brand != nil) ? false : true }, form: { data: { turbo_confirm: "#{collection.deletion_message}" } }) %>
            </div>
        </div>
    </div>
<% end %>