<div class="section">
  <div class="container is-max-tablet">
    <div class="block">
      <h2 class="title is-2"><%= t('change_your_password') %></h2>
    </div>

    <div class="block">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

          <%= f.input :password,
                      label: t('new_password'),
                      autofocus: true,
                      hint: (t('minimum_password_length', minimum_password_length: @minimum_password_length) if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: t('confirm_your_new_password'),
                      input_html: { autocomplete: "new-password" } %>

        <div class="field is-grouped is-grouped-right">
          <div class="control">
            <%= f.submit "Change my password", class: 'button is-link' %>
          </div>
        </div>
      <% end %>
    </div>
    <%= render "users/devise/shared/links" %>
  </div>
</div>