<div class="section">
  <div class="container is-max-tablet">
    <div class="block">
      <h2 class="title is-2"><%= t('sign_up') %></h2>
    </div>

    <div class="block">
      <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%#= render "users/devise/shared/error_messages", resource: resource %>
        <%= f.input :email, input_html: { autofocus: true, autocomplete: "email" } %>
        <%= f.input :username, hint: t('username_hint'), input_html: { autocomplete: "email" } %>
        <%= f.input :password, hint: t('password_hint'), input_html: { autofocus: true, autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, input_html: { autofocus: true, autocomplete: "new-password" } %>
        
        <%# The remember me field is a honeypot input to trap bots %>
        <%= check_box_tag :remember_me, tabindex: -1, class: 'bluff' %>
        
        <div class="field is-grouped is-grouped-right">
          <div class="control">
            <%= f.submit t('sign_up'), class: 'button is-link' %>
          </div>
        </div>
      <% end %>
    </div>
    <%= render "users/devise/shared/links" %>
  </div>
</div>

