<div class="section">
  <div class="container is-max-tablet">
    <div class="block">
      <h2 class="title is-2">Edit <%= resource_name.to_s.humanize %></h2>
    </div>

    <div class="block">
      <%= simple_form_for resource, as: resource_name, method: :put, url: registration_path(resource_name) do |f| %>
        <%= f.input :email, input_html: { autofocus: true, autocomplete: "email" } %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <p class="pb-1">Leave blank if you don't want to change it</p>
        <div class="new-password-container">
          <%= f.input :password, label: 'New password', hint: "#{@minimum_password_length} characters minimum", input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="field is-grouped is-grouped-right">
          <div class="control">
            <%= f.submit "Update", class: 'button is-link' %>
          </div>
        </div>
      <% end %>
    </div>

  <hr/>

  <h4 class="title is-4">Cancel my account</h4>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { turbo_confirm: "Are you sure that you want to delete your account?", turbo_method: :delete } %></p>

  <%#= link_to "Back", :back %>
  </div>
</div>
